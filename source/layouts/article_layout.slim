| <!doctype html>
html
  = partial('modules/head')
  body
    #container[role="main"]
      = partial('modules/header')
      = partial('modules/nav')
      #contents[role="main"]
        = partial('modules/breadcrumbs')
        #wrapper
          #article-main
            .top-thumbnail
              / top imageの画像サイズは3000px1500px
              = image_tag "/posts/#{current_page.date.strftime('%Y')}/#{current_page.date.strftime('%m')}/#{current_page.date.strftime('%d')}/#{current_page.title}/images/top-thumbnail.jpg"
